<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_checked="true">
    <shape>
      <gradient android:endColor="#eeffffff"
                android:startColor="#eeffffff" android:angle="270" />
      <corners android:radius="10dp" />
      <padding android:left="4dp" android:top="4dp"
               android:right="4dp" android:bottom="4dp" />
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape>
      <gradient android:endColor="#ffdddddd"
                android:startColor="#ffdddddd" android:angle="270" />
      <corners android:radius="10dp" />
      <padding android:left="4dp" android:top="4dp"
               android:right="4dp" android:bottom="4dp" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape>
      <gradient android:endColor="#ffeeeeee"
                android:startColor="#ffeeeeee" android:angle="270" />
      <corners android:radius="10dp" />
      <padding android:left="4dp" android:top="4dp"
               android:right="4dp" android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient android:endColor="#ffffffff"
                android:startColor="#ffffffff" android:angle="270" />
      <corners android:radius="10dp" />
      <padding android:left="4dp" android:top="4dp"
               android:right="4dp" android:bottom="4dp" />
    </shape>
  </item>

</selector>
